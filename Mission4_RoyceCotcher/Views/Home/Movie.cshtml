@{
}

@model Mission4_RoyceCotcher.Models.MovieSubmit

<div class="text-center">
    <h1>Add a Movie to my Collection!</h1>
</div>
<div class="text-left">
    <form method="post">
        <label asp-for="Category">Category of Movie</label>
        <input asp-for="Category"/><br />
        <label asp-for="Title">Movie Title</label>
        <input asp-for="Title" /><br />
        <label asp-for="Year">Year Released</label>
        <input asp-for="Year" /><br />
        <label asp-for="Director">Director</label>
        <input asp-for="Director" /><br />
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select><br />
        <label asp-for="Edited">Movie Edited?</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />
        <label asp-for="Lent">Lent out to</label>
        <input asp-for="Lent" /><br />
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />

        <button type="submit">Submit</button>
    </form>
</div>